<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<%= link_to "Enviar uma receita", new_recipe_path %>

<h1><%= flash[:error] %></h1>
<%= form_tag("/busca", method: "get")do%>
  <%= label_tag(:q, 'Busca')%>
  <%= text_field_tag(:q)%>
  <%= submit_tag('Buscar')%>

<%end%>

<% @cuisines.each do |c|%>
  <%= link_to(c.name,c) %> 

<% end %>

<% @recipetypes.each do |rt|%>
  <%= link_to(rt.name,rt) %>

<% end %>

<% @recipes.each do |r| %>
  <h1><%= link_to(r.title, r) %></h1>
  <ul>
    <li><%= r.recipe_type.name %></li>
    <li><%= r.cuisine.name %></li>
    <li><%= r.difficulty %></li>
    <li><%= r.cook_time %> minutos</li>
  </ul>
<% end %>


